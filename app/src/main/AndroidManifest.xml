<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yummy">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".ui.app.App"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@drawable/yummy_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yummy_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yummy">
        <activity android:name=".ui.news.NewsActivity" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />

        <receiver android:name=".broadcast.MyBroadcast" />
        <service
            android:name=".service.AlarmManagerService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
